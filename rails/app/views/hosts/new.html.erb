<h1>New Host and stuff</h2>

<% form_tag(:action => :create, :method => :get) do %>
  <p>
    <%= label_tag(:hostname, "Hostname") %><br />
    <%= text_field_tag(:hostname) %>
  </p>
  <p>
    <%= label_tag(:building, "Building") %><br />
    <%= text_field_tag(:building) %>
  </p>
  <p>
    <%= label_tag(:room, "Room") %><br />
    <%= text_field_tag(:room) %>
  </p>
  <p>
    <%= label_tag(:owner, "Owner") %><br />
    <%= text_field_tag(:owner) %>
  </p>
  <p>
    <%= label_tag(:label, "Port label") %><br />
    <%= text_field_tag(:label) %>
  </p>
  <p>
    <%= label_tag(:mac_addr, "Mac Address") %><br />
    <%= text_field_tag(:mac_addr) %>
  </p>
  <p>
    <%= submit_tag("Submit") %>
  </p>
<% end %>

<%= link_to 'Back', :back %>
